[ui]
interface = curses

[extensions]
color =
churn =
purge =
transplant =
strip =
shelve =
rebase =
share =
histedit =
hgext.bookmarks =
hggit =
convert =

[merge]
preferancestor = *

[merge-tools]
diffconflicts.executable=nvim
diffconflicts.args=-c 'let g:diffconflicts_vcs="hg"' -c DiffConflicts "$output" $base $local $other
diffconflicts.premerge=keep
diffconflicts.check=conflicts
diffconflicts.priority=99
//splice.executable = nvim
//splice.args = -c "let g:DisableAutoPHPFolding = 1" -f $base $local $other $output -c 'SpliceInit'
//splice.premerge = keep
//splice.priority = 1

[hooks]
pre-branch = ~/source/scripts/pre_hg_branch.sh
pre-push = ~/source/scripts/pre_push_phpcbf.sh
pre-push = ~/source/scripts/pre_push_phpcs.sh

[ui]
editor = ~/source/scripts/hg_verbose_commit.sh

[color]
mode=terminfo

[revsetalias]
wip = (parents(not public()) or not public() or . or head()) and (not obsolete()) and not closed()

[templates]
wip = '{label("log.branch", ifeq(branch, "default", "", branch))} {label("changeset.{phase}", rev)} {label("grep.user", author|user)}{label("log.tag", if(tags," {tags}"))} {bookmarks % "{ifeq(bookmark, currentbookmark, label('log.activebookmark', bookmark), label('log.bookmark', bookmark))} "}\n{label(ifcontains(rev, revset('parents()'), 'desc.here'),desc|firstline)}'

[alias]
wip = log --graph --rev=wip --template=wip
